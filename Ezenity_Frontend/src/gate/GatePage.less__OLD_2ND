/* Animations */
@keyframes burst {
    0% {
        opacity: 0;
        transform: scale(0.75);
    }

    20% {
        opacity: 1;
    }

    70% {
        opacity: 0.55;
    }

    100% {
        opacity: 0;
        transform: scale(1.65);
    }
}

@keyframes baseDrift {
    0%, 100% {
        filter: hue-rotate(0deg);
        transform: translate3d(0,0,0) scale(1);
    }

    50% {
        filter: hue-rotate(18deg);
        transform: translate3d(1.2%, -0.8%, 0) scale(1.02);
    }
}

@keyframes lavaMove {
    0% {
        transform: translate3d(-3%, -2%, 0) scale(1.02);
    }

    50% {
        transform: translate3d(3%, 2%, 0) scale(1.05);
    }

    100% {
        transform: translate3d(-3%, -2%, 0) scale(1.02);
    }
}

@keyframes starRun {
    0% {
        transform: translateX(0) rotate(12deg);
        opacity: 0;
    }

    10% {
        opacity: 0.9;
    }

    60% {
        opacity: 0.8;
    }

    100% {
        transform: translateX(calc(100vw + 760px)) rotate(12deg);
        opacity: 0;
    }
}

@keyframes ringBreath {
    0%, 100% {
        transform: scale(1);
        box-shadow: 0 0 0 2px rgba(148,163,184,0.22) inset, 0 0 0 10px rgba(2,6,23,0.72) inset, 0 0 60px rgba(250,204,21,0.10);
    }

    50% {
        transform: scale(1.01);
        box-shadow: 0 0 0 2px rgba(148,163,184,0.26) inset, 0 0 0 10px rgba(2,6,23,0.72) inset, 0 0 85px rgba(250,204,21,0.16);
    }
}

@keyframes skullPulse {
    0%, 100% {
        transform: translateY(0) scale(1);
        opacity: 0.92;
    }

    50% {
        transform: translateY(-4px) scale(1.04);
        opacity: 1;
    }
}

@keyframes hitRing {
    from {
        opacity: 0.9;
        transform: scale(0.85);
    }

    to {
        opacity: 0;
        transform: scale(1.15);
    }
}

@keyframes shake {
